@model IEnumerable<MateoOrtegaVacasPrueba.Models.Recompensa>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Puntos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoRecompensa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Puntos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoRecompensa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.NombreCliente)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdRecompensa">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdRecompensa">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdRecompensa">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
